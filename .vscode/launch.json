        {
            "name": "Launch room",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/internal/room/main.go",
            "env": {
                "CONF_PATH":"${workspaceFolder}/config/local", 
                "PROCESS_ENV": "local",
                "API_VERSION": "6",
                "SIMULATOR": "true"
            },
            "debugAdapter": "legacy",
            "dlvFlags": [
                "--check-go-version=false",
            ]
        },
        {
            "name": "Launch gate",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/internal/gate/main.go",
            "env": {
                "CONF_PATH":"${workspaceFolder}/config/local", 
                "PROCESS_ENV": "local",
                "API_VERSION": "6"
            },
            "debugAdapter": "legacy",
            "dlvFlags": [
                "--check-go-version=false"
            ]
        },
        {
            "name": "Launch simulator",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/servers/simulator/main.go",
            "env": {
                "CONF_PATH":"${workspaceFolder}/config/local", 
                "PROCESS_ENV": "local",
                "API_VERSION": "6"
            },
            "debugAdapter": "legacy",
            "dlvFlags": [
                "--check-go-version=false"
            ]
        },
    ]
