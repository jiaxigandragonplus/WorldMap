  "configuration_explanations": {
    "obstacle_types": {
      "mountain": "高山 - 阻挡建筑、资源和怪物刷新，通常允许行军通过但速度减慢",
      "lake": "湖泊 - 阻挡建筑，但可以刷新渔产资源，通常有恢复效果",
      "forest": "森林 - 阻挡建筑，可以刷新木材和草药，减少视野范围",
      "swamp": "沼泽 - 阻挡建筑和资源，大幅减慢行军速度",
      "cliff": "悬崖 - 完全阻挡行军和建筑，可能作为地图边界",
      "river": "河流 - 阻挡建筑，不影响资源，轻微影响行军速度",
      "volcano": "火山 - 阻挡建筑和资源，对周围单位造成持续伤害",
      "desert": "沙漠 - 特殊地形，影响资源分布和行军速度",
      "ruins": "废墟 - 古代遗迹，可能隐藏特殊资源或事件"
    },
    
    "obstacle_effects": {
      "block_building": "是否阻挡建筑摆放 - true表示不能在该区域建造建筑",
      "block_resource": "是否阻挡资源刷新 - true表示不能在该区域刷新资源点",
      "block_monster": "是否阻挡怪物刷新 - true表示不能在该区域刷新怪物",
      "allow_march": "是否允许行军通过 - true表示部队可以通过该区域",
      "building_radius": "建筑阻挡半径 - 障碍物周围多少距离内不能建造建筑",
      "resource_radius": "资源阻挡半径 - 障碍物周围多少距离内不能刷新资源",
      "monster_radius": "怪物阻挡半径 - 障碍物周围多少距离内不能刷新怪物"
    },
    
    "terrain_effects_examples": {
      "movement_speed": "移动速度乘数 - 1.0为正常，0.7表示减速30%",
      "vision_range": "视野范围乘数 - 1.0为正常，0.8表示视野减少20%",
      "stamina_consumption": "体力消耗乘数 - 1.0为正常，1.2表示消耗增加20%",
      "water_restoration": "水分恢复乘数 - 1.0为正常，1.5表示恢复增加50%",
      "healing": "治疗效果 - 正值表示持续恢复生命值"
    },
    
    "configuration_tips": [
      "1. 高山适合作为地图的自然屏障，配置较大的阻挡半径",
      "2. 湖泊和森林可以设计为资源富集区，只阻挡建筑不阻挡资源",
      "3. 河流可以作为地图的分界线，轻微影响行军但不完全阻挡",
      "4. 障碍物区域适合创建大片连续的特殊地形，如山脉、森林等",
      "5. 特殊效果可以增加游戏策略性，如火山区域的持续伤害",
      "6. 考虑障碍物对游戏平衡的影响，避免过多阻挡导致玩家体验下降",
      "7. 障碍物配置应与资源刷新策略协调，创建合理的游戏世界"
    ]
